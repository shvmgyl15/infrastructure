global
    log /dev/log    local0
    log /dev/log    local1 notice
    stats timeout 120s
    maxconn 4096
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    tcp
    option  tcplog
    option  dontlognull
    timeout connect 15s
    timeout client  15s
    timeout server  15s
    stats enable
    stats hide-version
    stats refresh 30s
    stats show-node
    stats uri /haproxy?stats

frontend http_80_frontend
    bind *:80
    mode http
   {% for h in target_proxy_instances.instances %}
    acl {{ h.tags.Name }} hdr(host) -i {{ h.tags.Name }}.projecteka.in
    use_backend {{h.tags.Name}} if { hdr(host) -i {{ h.tags.Name }}.projecteka.in }
   {% endfor %}

{% for h in target_proxy_instances.instances %}
backend {{ h.tags.Name }}
  mode http
  server {{ h.tags.Name }} {{ h.private_ip_address }}:9051
{% endfor %}